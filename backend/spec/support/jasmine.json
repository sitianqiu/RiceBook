{
  "spec_dir": "spec",
  "spec_files": [
    "**/*[sS]pec.?(m)js"
  ],
  "helpers": [
    "helpers/**/*.?(m)js"
  ],
  "env": {
    "stopSpecOnExpectationFailure": false,
    "random": false
  },
  "reporters": [
    {
      "name": "jasmine-reporters.JUnitXmlReporter",
      "options": {
        "savePath": "./test-results",
        "filePrefix": "junit-results",
        "consolidateAll": true
      }
    }
  ]
}
